<h1>Books</h1>
<p id="notice"><%= notice %></p>

<% if logged_in? %>
  <p><%= link_to 'Add new Book', new_book_path %></p>
<% end %>


    <%  @books.each do |book| %>
    <p>
      <%= link_to(book.title, book_path(book.id)) %>
      <% if logged_in? %>
        <%= link_to('Edit book', edit_book_path(book.id)) %>
        <%= link_to('Delete', book_path(book.id), data: {method: :delete, confirm: 'Yes?'}) %>
       <% end %>
    </p>
    <% end %>
